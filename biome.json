{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "includes": [
            "**",
            "!**/_cjs",
            "!**/_esm",
            "!**/_types",
            "!**/.cache",
            "!**/.next",
            "!**/.svelte-kit",
            "!**/.vercel",
            "!**/node_modules",
            "!**/CHANGELOG.md",
            "!**/bun.lockb",
            "!**/cache",
            "!**/contracts",
            "!**/test/kzg/**/*.json",
            "!**/test/kzg/**/*.txt",
            "!**/coverage",
            "!**/tsconfig.json",
            "!**/tsconfig.*.json",
            "!**/generated.ts",
            "!**/vectors/**/*.json",
            "!**/vectors/**/*.test.ts",
            "!**/wagmi",
            "!**/site/dist",
            "!**/dist",
            "!**/out",
            "!**/.wxt"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useButtonType": "off"
            },
            "complexity": {
                "noBannedTypes": "off"
            },
            "correctness": {
                "noUnusedVariables": "error"
            },
            "performance": {
                "noBarrelFile": "error",
                "noReExportAll": "error",
                "noDelete": "off"
            },
            "style": {
                "noNonNullAssertion": "off",
                "useConsistentArrayType": {
                    "level": "error",
                    "options": {
                        "syntax": "shorthand"
                    }
                }
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noAssignInExpressions": "off",
                "noConfusingVoidType": "off",
                "noExplicitAny": "off",
                "noRedeclare": "off",
                "noUnknownAtRules": "off",
                "noConsole": {
                    "level": "error",
                    "options": {
                        "allow": [
                            "log"
                        ]
                    }
                }
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all",
            "semicolons": "always"
        }
    },
    "css": {
        "linter": {
            "enabled": true
        },
        "parser": {
            "tailwindDirectives": true
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "off"
            }
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}
