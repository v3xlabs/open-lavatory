{
  "name": "open-lavatory",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter !@openlv/example-dapp --filter !@openlv/sandbox --filter !@openlv/example-wallet --filter !@openlv/extension build",
    "build:connector": "pnpm --filter @openlv/connector build",
    "build:docs": "pnpm --filter docs build",
    "build:extension": "pnpm build:lib && pnpm --filter @openlv/extension build",
    "build:extension:firefox": "pnpm build:lib && pnpm --filter @openlv/extension build:firefox",
    "build:lib": "pnpm --filter @openlv/transport build",
    "build:modal": "pnpm --filter @openlv/modal build",
    "dapp": "pnpm build:lib && pnpm build:connector && pnpm --filter @openlv/example-dapp dev",
    "dev:docs": "pnpm --filter docs dev",
    "extension": "pnpm build:lib && pnpm --filter @openlv/extension dev",
    "extension:firefox": "pnpm build:lib && pnpm --filter @openlv/extension dev:firefox",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "sandbox": "pnpm build:lib && pnpm build:connector && pnpm --filter @openlv/sandbox dev",
    "test": "pnpm -r test",
    "wallet": "pnpm --filter @openlv/example-wallet dev"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@wagmi/core": "2",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^58.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.28.0",
    "viem": "2",
    "wagmi": "2"
  },
  "packageManager": "pnpm@10.10.0"
}
