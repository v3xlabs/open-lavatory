{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
        "outDir": "dist",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "isolatedModules": true,
    },
    "include": ["src"]
}
